{{#if isIndex}}
<script>
  const list = JSON.parse(document.querySelector('#memberList').textContent)

  const group = document.querySelector('#group');
  const memberElem = document.querySelector('#member');
  group.addEventListener('change', (event) => {
    let memberList;
    switch (group.value) {
      case 'sakura': {
        memberList = list['sakura'];
        break;
      }
      case 'nogi': {
        memberList = list['nogi'];
        break;
      }
      case 'hinata': {
        memberList = list['hinata'];
        break;
      }
    }
    const oldOptions = document.querySelectorAll('#member option');
    oldOptions.forEach(item => item.remove());

    for (const member of memberList) {
      const option = document.createElement('option');
      option.value = member.member_id;
      option.textContent = member.name;
      memberElem.appendChild(option);
    }
  })
</script>
