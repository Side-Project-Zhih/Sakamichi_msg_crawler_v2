{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dst",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  // Include TypeScript files in the src directory
  "exclude": [
    "node_modules",
    "dst"
    // Add the "dst" folder to exclude
  ]
}
